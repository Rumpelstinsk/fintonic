{
  "name": "fintonic",
  "version": "1.0.0",
  "description": "Technical Challenge for Fintonic",
  "main": "src/server.ts",
  "scripts": {
    "build": "prettier --write src/ && tsc -p tsconfig.json",
    "lint": "eslint src/**/*.ts --fix",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --noEmit",
    "typecheck-watch": "tsc --noEmit --watch",
    "build-watch": "tsc --watch --incremental -p tsconfig.json",
    "start": "nodemon src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rumpelstinsk/fintonic.git"
  },
  "author": "Jaime Ferrer SÃ¡nchez",
  "license": "ISC",
  "homepage": "https://github.com/Rumpelstinsk/fintonic#readme",
  "_moduleAliases": {
    "@modules": "src/modules",
    "@config": "src/config"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "module-alias": "^2.2.2",
    "mongoose": "^6.3.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/inversify": "^2.0.33",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
